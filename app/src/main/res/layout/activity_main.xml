<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.niniliwei.myappportfolio.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/margin_top_title"
            android:text="@string/my_nanodegree_apps"
            android:textColor="@android:color/black"
            android:textSize="@dimen/text_size_title" />

        <Button
            android:id="@+id/button_popular_movies"
            style="@style/CustomButtonStyle"
            android:layout_below="@+id/title"
            android:text="@string/popular_movies" />

        <Button
            android:id="@+id/button_stock_hawk"
            style="@style/CustomButtonStyle"
            android:layout_below="@+id/button_popular_movies"
            android:text="@string/stock_hawk" />

        <Button
            android:id="@+id/button_build_it_bigger"
            style="@style/CustomButtonStyle"
            android:layout_below="@+id/button_stock_hawk"
            android:text="@string/build_it_bigger" />

        <Button
            android:id="@+id/button_make_your_app_material"
            style="@style/CustomButtonStyle"
            android:layout_below="@+id/button_build_it_bigger"
            android:text="@string/make_your_app_material" />

        <Button
            android:id="@+id/button_go_ubiquitous"
            style="@style/CustomButtonStyle"
            android:layout_below="@+id/button_make_your_app_material"
            android:text="@string/go_ubiquitous" />

        <Button
            android:id="@+id/button_capstone"
            style="@style/CustomButtonStyle"
            android:layout_below="@+id/button_go_ubiquitous"
            android:text="@string/capstone" />
    </RelativeLayout>
</ScrollView>
